<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_auto_image_slider"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="fitXY"
        android:src="@drawable/slider_1" />

    <TextView
        android:id="@+id/tv_auto_image_slider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_auto_image_slider"
        android:background="@color/colorPlatinum"
        android:gravity="center"
        android:padding="6dp"
        android:text="Deskripsi Gambar"
        android:textColor="@color/orange"
        android:textSize="18sp"
        android:textStyle="bold" />
</RelativeLayout>